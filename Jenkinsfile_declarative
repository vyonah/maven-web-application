pipeline{
  agent any    
  tools{
    maven 'maven3.9.9'
  }
  stages{
    stage('1.GitClone'){
      steps{
         sh  "echo cloning the latest app version"
         git 'https://github.com/vyonah/maven-web-application'        
      }
    } 
    stage('2.mavenbuild'){
      steps{
         sh  "echo creating deployable packages"
         sh  'mvn clean package'        
      }
    }
